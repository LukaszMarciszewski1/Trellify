{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true,
      "typeRoots" : ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}